[
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-\\": "workspace::ActivatePreviousPane",
      "ctrl-shift-left": "workspace::SwapPaneLeft",
      "ctrl-shift-right": "workspace::SwapPaneRight",
      "ctrl-tab": "pane::ActivateNextItem",
      "ctrl-shift-tab": "pane::ActivatePreviousItem",
      "cmd-1": ["pane::ActivateItem", 0],
      "cmd-2": ["pane::ActivateItem", 1],
      "cmd-3": ["pane::ActivateItem", 2],
      "cmd-4": ["pane::ActivateItem", 3],
      "cmd-5": ["pane::ActivateItem", 4],
      "cmd-6": ["pane::ActivateItem", 5],
      "cmd-7": ["pane::ActivateItem", 6],
      "cmd-8": ["pane::ActivateItem", 7],
      "cmd-9": ["pane::ActivateItem", 8],
      "ctrl-p": "file_finder::Toggle"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-shift-left": "workspace::SwapPaneLeft",
      "ctrl-shift-right": "workspace::SwapPaneRight",
      "ctrl-f": "pane::DeploySearch",
      "ctrl-tab": "pane::ActivateNextItem",
      "ctrl-shift-tab": "pane::ActivatePreviousItem"
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-shift-left": "workspace::SwapPaneLeft",
      "ctrl-shift-right": "workspace::SwapPaneRight",
      "ctrl-tab": "pane::ActivateNextItem",
      "ctrl-shift-tab": "pane::ActivatePreviousItem"
    }
  },
  {
    "context": "Editor && vim_mode == visual",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-shift-left": "workspace::SwapPaneLeft",
      "ctrl-shift-right": "workspace::SwapPaneRight",
      "ctrl-tab": "pane::ActivateNextItem",
      "ctrl-shift-tab": "pane::ActivatePreviousItem"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-p": "file_finder::Toggle"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "cmd-d": "pane::SplitRight",
      "cmd-shift-d": "pane::SplitDown",
      "cmd-k": ["workspace::SendKeystrokes", "ctrl-b K"],
      "cmd-t": ["workspace::SendKeystrokes", "ctrl-b c"],
      "ctrl-tab": ["workspace::SendKeystrokes", "ctrl-b n"],
      "ctrl-shift-tab": ["workspace::SendKeystrokes", "ctrl-b p"],
      "cmd-1": ["workspace::SendKeystrokes", "ctrl-b 1"],
      "cmd-2": ["workspace::SendKeystrokes", "ctrl-b 2"],
      "cmd-3": ["workspace::SendKeystrokes", "ctrl-b 3"],
      "cmd-4": ["workspace::SendKeystrokes", "ctrl-b 4"],
      "cmd-5": ["workspace::SendKeystrokes", "ctrl-b 5"],
      "cmd-6": ["workspace::SendKeystrokes", "ctrl-b 6"],
      "cmd-7": ["workspace::SendKeystrokes", "ctrl-b 7"],
      "cmd-8": ["workspace::SendKeystrokes", "ctrl-b 8"],
      "cmd-9": ["workspace::SendKeystrokes", "ctrl-b 9"]
    }
  }
]
